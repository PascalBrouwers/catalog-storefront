    <exchange name="magento" type="topic" connection="amqp">
        <binding id="updatedProductsBinding" topic="storefront.catalog.product.update" destinationType="queue" destination="storefront.catalog.connector"/>
        <binding id="updatedCategoriesBinding" topic="storefront.catalog.category.update" destinationType="queue" destination="storefront.catalog.connector"/>

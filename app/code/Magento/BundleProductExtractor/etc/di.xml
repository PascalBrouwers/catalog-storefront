<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\CatalogExtractor\DataProvider\Transformer">
        <arguments>
            <argument name="map" xsi:type="array">
                <item name="price_view" xsi:type="string">Magento\BundleProductExtractor\DataProvider\BundleFieldsTransformer</item>
                <item name="price_type" xsi:type="string">Magento\BundleProductExtractor\DataProvider\BundleFieldsTransformer</item>
                <item name="sku_type" xsi:type="string">Magento\BundleProductExtractor\DataProvider\BundleFieldsTransformer</item>
                <item name="shipment_type" xsi:type="string">Magento\BundleProductExtractor\DataProvider\BundleFieldsTransformer</item>
                <item name="weight_type" xsi:type="string">Magento\BundleProductExtractor\DataProvider\BundleFieldsTransformer</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\CatalogExtractor\DataProvider\Query\Product\ProductAttributeQueryBuilder">
        <arguments>
            <argument name="linkedAttributes" xsi:type="array">
                <item name="dynamic_weight" xsi:type="array">
                    <item name="0" xsi:type="string">weight_type</item>
                    <item name="1" xsi:type="string">name</item>
                </item>
                <item name="ship_bundle_items" xsi:type="array">
                    <item name="0" xsi:type="string">shipment_type</item>
                    <item name="1" xsi:type="string">name</item>
                </item>
                <item name="dynamic_price" xsi:type="array">
                    <item name="0" xsi:type="string">price_type</item>
                    <item name="1" xsi:type="string">name</item>
                </item>
                <item name="dynamic_sku" xsi:type="array">
                    <item name="0" xsi:type="string">sku_type</item>
                    <item name="1" xsi:type="string">name</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
